  <body>

    <header>
      <div id="top-header">
        <div class="container">
          <ul class="header-links pull-left">
            <li><a href="#"><i class="fas fa-envelope"></i>tmfdk333@gmail.com</a></li>
            <li><a href="#"><i class="fas fa-map-marker-alt"></i>South Korea</a></li>
          </ul>
        </div>
      </div>

      <div id="header">
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <div class="header-logo">
                <%= link_to categories_path do %>
                  <img src="<%= asset_path 'logo.png' %>">
                  <!-- http://wantknow.tistory.com/54 -->
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <nav id="navigation">
      <div class="container">
        <div id="responsive-nav">
          <ul class="main-nav nav navbar-nav">
            <% @categories.each do |category| %>
              <li>
                <!-- https://stackoverflow.com/questions/17795053/if-else-statements-in-html-erb-in-views -->
                <% if @category.name == category.name %>
                  <%= link_to category.name, category_path(category), class: "active" %>
                <% else %>
                  <%= link_to category.name, category_path(category) %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>

        <div id="responsive-nav">
          <ul class="main-nav nav navbar-nav edit-category">
            <li><%= link_to 'New', new_category_path %></li>
            <li><%= link_to 'Edit', edit_category_path %></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- BREADCRUMB -->
    <div id="breadcrumb" class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <ul class="breadcrumb-tree">
              <li>
                <%= link_to category_path(@category) do %>
                  All
                <% end %>
              </li>
              <li><a href="#">True</a></li>
              <li><a href="#">False</a></li>
              <% if @item != nil %>
                <li>
                  <%= link_to edit_category_item_path(@category, @item), class: "active" do %>
                    Edit
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="section">
      <div class="container">
        <div class="row">

          <!-- product -->
          <div class="col-md-12">
          <% @items.each do |item| %>
            <div class="col-md-6 col-md-4">
              <div class="product">
                <% if item.check != false %>
                  <div class="product-img">
                <% else %>
                  <div class="product-img get-check">
                <% end %>
                <%= link_to item.address, target: :_blank do %>
                  <img src="<%= item.image %>" alt="">
                <% end %>
                  <div class="product-label">
                    <span class="new">
                      <%= link_to [item.category, item], method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <% if item.check %>
                          <i class="fa fa-times"></i>
                        <% else %>
                          <i class="fa fa-times fa-check"></i>
                        <% end %>
                      <% end %>
                    </span>
                  </div>
                </div>
                        <!--                  <div class="product-body">-->
                        <!--                    <p class="product-category"><%# @category.name %></p>-->
                        <!--                    <h3 class="product-name"><a href="#">product name goes here</a></h3>-->
                        <!--                    <h4 class="product-price">$980.00 <del class="product-old-price">$990.00</del></h4>-->
                        <!--                    <div class="product-rating">-->
                        <!--                      <i class="fa fa-star"></i>-->
                        <!--                      <i class="fa fa-star"></i>-->
                        <!--                      <i class="fa fa-star"></i>-->
                        <!--                      <i class="fa fa-star"></i>-->
                        <!--                      <i class="fa fa-star"></i>-->
                        <!--                    </div>-->
                        <!--                    <div class="product-btns">-->
                        <!--                      <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>-->
                        <!--                      <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>-->
                        <!--                      <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>-->
                        <!--                    </div>-->
                        <!--                  </div>-->
              </div>

              <div class="product-body">
                <div class="product-category"><%= item.created_at.strftime("%Y.%m.%d") %></div>
              </div>
            </div>

        <% end %>
        </div>
        <!-- /product -->

      </div>
    </div>
  </div>

  <div id="newsletter" class="section">
    <!-- container -->
    <div class="container">
      <!-- row -->
      <div class="row">
        <div class="col-md-12">
          <div class="newsletter">
            <p>ADD <strong>NEW ITEM</strong></p>

            <!-- product input -->
            <div class="col-md-12">
              <div class="form-inline">
                <%= form_for([@category, @category.items.build]) do |f| %>
                  <div class="form-group">
                    <%= f.label :image %>
                    <%= f.text_area :image, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :address %>
                    <%= f.text_area :address, class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :check %>
                    <%= f.check_box :check, checked: true, class: "checkbox-purchase" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit class: "btn btn-primary btn-sm"%>
                  </div>
                <% end %>
              </div>
            </div>
            <!-- /product input -->

            <!--              <form>-->
            <!--                <input class="input" type="email" placeholder="Enter Your Email">-->
