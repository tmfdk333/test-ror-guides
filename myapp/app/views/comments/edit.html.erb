<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text: </strong>
  <%= @article.text  %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>

<h2> Edit Comment: </h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter: </strong> <%= comment.commetner %>
    <strong>Comment: </strong> <%= comment.body %>
    <% if comment.id != @comment.id %>
      <strong>Check: </strong> <%= comment.buy %>
    <% else %>
      <%= form_for @comment, url: article_comment_path(@article), method: :patch do |f| %>
        <%= f.label :buy %>
        <%= f.check_box :buy %>
        <%= f.submit %>
      <% end %>
    <% end %>
  </p>
<% end %>

<h2> Add Comment: </h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commetner %>
    <%= f.text_field :commetner %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :buy %>
    <%= f.check_box :buy %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>